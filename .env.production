# Production Environment Configuration for LegalEase AI
# Replace these values with your actual production settings

# Google Gemini API Key - REQUIRED
GEMINI_API_KEY=your_production_gemini_api_key

# Server Configuration
PORT=3000
NODE_ENV=production

# Security Configuration
SESSION_SECRET=your_super_secret_session_key_minimum_32_characters
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting (production-optimized)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# Database (if you plan to add persistence)
# DATABASE_URL=your_database_connection_string

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_ENABLED=true